<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="styleLinear">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_margin">@dimen/marginSmall</item>
	    <item name="android:padding">@dimen/marginSmall</item>
	</style>
	<style name="styleButton">
	    <item name="android:layout_height">@dimen/sizeNormal</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_margin">@dimen/marginSmall</item>
	</style>
	<style name="styleFrame">
	    <item name="android:layout_height">@dimen/sizeBox</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_marginLeft">@dimen/sizeBox</item>
	    <item name="android:layout_marginRight">@dimen/sizeBox</item>
	</style>
	<style name="styleTextView">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	    <item name="android:paddingLeft">@dimen/marginSmall</item>
	    <item name="android:paddingRight">@dimen/marginSmall</item>
	</style>
	<style name="styleEditText">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:lines">1</item>
	</style>
</resources>
